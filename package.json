{
  "name": "setprotocol.js",
  "version": "0.3.16-alpha.0",
  "description": "A javascript library for interacting with the Set protocol",
  "keywords": [
    "setProtocol.js",
    "setProtocol",
    "ethereum",
    "tokens",
    "basket",
    "ERC20"
  ],
  "main": "dist/src/index.js",
  "typings": "dist/types/src/index.d.ts",
  "scripts": {
    "prod": "yarn run build",
    "chain": "bash scripts/init_chain.sh",
    "build": "yarn run build-ts && yarn run tslint",
    "build-ts": "tsc",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-ts": "tsc -w",
    "playground": "yarn run build-ts; node dist/playground",
    "precommit": "lint-staged",
    "clean-docs": "rm -rf documentation/interfaces; rm -rf documentation/modules; rm -rf documentation/README.md",
    "docs": "rm -rf documentation/classes; typedoc --theme markdown --excludeExternals  --externalPattern \"**/node_modules/**\" --ignoreCompilerErrors --out documentation/ src/api; yarn run clean-docs",
    "deploy-docs": "gh-pages -d docs",
    "prepublishOnly": "yarn build"
  },
  "config": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/SetProtocol/setProtocol.js"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "ganache-cli": "6.1.6",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.3.1",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.1.6",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@0xproject/typescript-typings": "^1.0.4",
    "@0xproject/utils": "^1.0.4",
    "@types/lodash": "^4.14.108",
    "@types/lodash.compact": "^3.0.3",
    "@types/chai": "^4.1.4",
    "@types/jest": "^22.0.1",
    "@types/node": "^10.0.3",
    "abi-decoder": "^1.1.0",
    "bignumber.js": "^5.0.0",
    "chai-bignumber": "^2.0.2",
    "ethereum-types": "^1.0.4",
    "ethereumjs-util": "^5.2.0",
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.4",
    "lodash.compact": "^3.0.1",
    "set-protocol-contracts": "0.3.1",
    "set-protocol-utils": "^0.3.15",
    "tiny-promisify": "^1.0.0",
    "truffle-contract": "^3.0.1",
    "truffle-hdwallet-provider": "0.0.3",
    "web3-utils": "1.0.0-beta.35"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn tslint --fix",
      "git add"
    ],
    "test/**/*.ts": [
      "yarn tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/_versions/"
    ],
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
