{
  "name": "setprotocol.js",
  "version": "1.0.0-alpha.12",
  "description": "A javascript library for interacting with the Set protocol",
  "keywords": [
    "setProtocol.js",
    "setProtocol",
    "ethereum",
    "tokens",
    "basket",
    "ERC20"
  ],
  "main": "dist/src/index.js",
  "typings": "dist/types/src/index.d.ts",
  "bin": {
    "set-chain": "bin/chain"
  },
  "scripts": {
    "prod": "yarn run build",
    "clean-chain": "rm -rf blockchain && cp -r snapshots/0x blockchain",
    "chain": "yarn clean-chain && bash scripts/init_chain_internal.sh",
    "build": "yarn run build-ts && yarn run tslint",
    "build-ts": "tsc",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-ts": "tsc -w",
    "playground": "yarn run build-ts; node dist/playground",
    "precommit": "lint-staged",
    "docs": "yarn docs:typedoc && yarn docs:markdown && yarn docs:clean",
    "docs:clean": "rm -rf scripts/docs/typedocToMdParser.js",
    "docs:typedoc": "rm -rf documentation/classes; typedoc --theme markdown --excludeExternals --includeDeclarations  --externalPattern \"**/node_modules/**\" --ignoreCompilerErrors --json documentation/typedoc.json src/*",
    "docs:markdown": "tsc ./scripts/docs/typedocToMdParser.ts && node ./scripts/docs/generateMarkdown",
    "deploy-docs": "gh-pages -d docs",
    "prepublishOnly": "yarn build"
  },
  "config": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/SetProtocol/setProtocol.js"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "ganache-cli": "6.1.7",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^7.2.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.3.1",
    "typedoc": "^0.12.0",
    "typedoc-plugin-markdown": "^1.1.6",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@0xproject/types": "^0.8.2",
    "@0xproject/typescript-typings": "^1.0.4",
    "@0xproject/utils": "^1.0.4",
    "@types/chai": "^4.1.4",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.108",
    "@types/lodash.compact": "^3.0.3",
    "@types/node": "^10.0.3",
    "abi-decoder": "^1.1.0",
    "bignumber.js": "^5.0.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "ethereum-types": "^1.0.4",
    "ethereumjs-util": "^5.2.0",
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.4",
    "lodash.compact": "^3.0.1",
    "set-protocol-contracts": "0.3.6",
    "set-protocol-utils": "^0.3.23",
    "tiny-promisify": "^1.0.0",
    "truffle-contract": "^3.0.1",
    "truffle-hdwallet-provider": "0.0.3",
    "web3-utils": "1.0.0-beta.35"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn tslint --fix",
      "git add"
    ],
    "test/**/*.ts": [
      "yarn tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/_versions/"
    ],
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
