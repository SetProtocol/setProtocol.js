{
  "name": "setprotocol.js",
  "version": "0.3.1",
  "description": "A javascript library for interacting with the {Set} protocol",
  "keywords": [
    "setProtocol.js",
    "setProtocol",
    "ethereum",
    "tokens",
    "basket",
    "ERC20"
  ],
  "main": "dist/SetProtocol.js",
  "scripts": {
    "prod": "yarn run build",
    "chain": "bash scripts/init_chain.sh",
    "build": "yarn run build-ts && yarn run tslint",
    "build-ts": "tsc",
    "test": "jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-ts": "tsc -w",
    "playground": "yarn run build-ts; node dist/playground",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "precommit": "lint-staged",
    "clean-docs": "rm -rf documentation/interfaces; rm -rf documentation/modules; rm -rf documentation/README.md",
    "docs": "rm -rf documentation/classes; typedoc --theme markdown --excludeExternals  --externalPattern \"**/node_modules/**\" --ignoreCompilerErrors --out documentation/ src/api; yarn run clean-docs",
    "deploy-docs": "gh-pages -d docs"
  },
  "config": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/SetProtocol/setProtocol.js"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@0xproject/typescript-typings": "^0.2.0",
    "@0xproject/utils": "^0.5.2",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.93",
    "bignumber.js": "^5.0.0",
    "chai": "^4.1.2",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "prettier": "1.10.2",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.1.6",
    "typescript": "^2.6.2",
    "web3-typescript-typings": "^0.9.4"
  },
  "dependencies": {
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.4",
    "set-protocol-contracts": "^0.2.0",
    "truffle-contract": "^3.0.1",
    "truffle-hdwallet-provider": "0.0.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
