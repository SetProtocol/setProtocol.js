{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "typeRoots": [
      "node_modules/set-protocol-utils/types/*",
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/set-protocol-utils/types",
        "node_modules/set-protocol-contracts/dist/typings",
        "src/types",
      ],
      "@src/*": [ "src/*" ],
      "@test/*": [ "test/*" ],
    },
    "declarationDir": "dist/types",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
